{
  "id": "nl.elro",
  "version": "3.0.2",
  "compatibility": ">=1.5.6",
  "sdk": 2,
  "category": [
    "appliances",
    "lights"
  ],
  "name": {
    "en": "Elro",
    "nl": "Elro"
  },
  "description": {
    "en": "Give Homey the ability to control your Elro devices",
    "nl": "Laat Homey Elro apparaten aansturen"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.com"
  },
  "images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "permissions": [
    "homey:wireless:433"
  ],
  "flow": {
    "triggers": [
      {
        "id": "AB440R:received",
        "title": {
          "en": "Button is pressed",
          "nl": "Knop is ingedrukt"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=AB440R"
          },
          {
            "name": "unit",
            "type": "dropdown",
            "values": [
              {
                "id": "10000",
                "label": {
                  "en": "Button A",
                  "nl": "Knop A"
                }
              },
              {
                "id": "01000",
                "label": {
                  "en": "Button B",
                  "nl": "Knop B"
                }
              },
              {
                "id": "00100",
                "label": {
                  "en": "Button C",
                  "nl": "Knop C"
                }
              },
              {
                "id": "00010",
                "label": {
                  "en": "Button D",
                  "nl": "Knop D"
                }
              }
            ]
          },
          {
            "name": "state",
            "type": "dropdown",
            "values": [
              {
                "id": "1",
                "label": {
                  "en": "On",
                  "nl": "Aan"
                }
              },
              {
                "id": "0",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "capabilities": [],
      "images": {
        "large": "/drivers/AB440R/assets/images/large.png",
        "small": "/drivers/AB440R/assets/images/small.png"
      },
      "icon": "/drivers/AB440R/assets/icon.svg",
      "class": "other",
      "pair": [
        {
          "id": "rf.imitate",
          "options": {
            "title": "rf.pair.imitate.title.remote",
            "body": "rf.pair.imitate.body.remote",
            "svg": "assets/pair.svg"
          }
        },
        {
          "id": "rf.test",
          "navigation": {
            "prev": "rf.imitate",
            "next": "rf.done"
          },
          "options": {
            "svg": "assets/test.svg"
          }
        },
        {
          "id": "rf.done"
        }
      ],
      "id": "AB440R",
      "name": {
        "en": "AB440R"
      },
      "rf": {
        "signal": "elro_dipswitch"
      }
    },
    {
      "capabilities": [
        "onoff"
      ],
      "images": {
        "large": "/drivers/AB440SC/assets/images/large.png",
        "small": "/drivers/AB440SC/assets/images/small.png"
      },
      "icon": "/drivers/AB440SC/assets/icon.svg",
      "class": "socket",
      "pair": [
        {
          "id": "rf.choice",
          "options": {
            "title": "rf.pair.choice.title.dipswitch",
            "body": "rf.pair.choice.body.dipswitch",
            "choices": [
              {
                "name": "rf.pair.choice.buttons.copy.default",
                "view": "rf.imitate",
                "svg": "assets/remote.svg"
              },
              {
                "name": "rf.pair.choice.buttons.generate.dipswitch",
                "view": "rf.info",
                "svg": "assets/dipswitches.svg"
              }
            ]
          }
        },
        {
          "id": "rf.imitate",
          "navigation": {
            "prev": "rf.choice"
          },
          "options": {
            "svg": "assets/remote.svg"
          }
        },
        {
          "id": "rf.test_switch",
          "navigation": {
            "prev": "rf.imitate",
            "next": "choose_slave"
          }
        },
        {
          "template": "choose_slave",
          "id": "choose_slave",
          "navigation": {
            "prev": "rf.test_switch",
            "next": "rf.done"
          }
        },
        {
          "id": "rf.info",
          "options": {
            "title": "rf.pair.info.title.dipswitch",
            "body": "rf.pair.info.body.dipswitch",
            "svg": "assets/dipswitches.svg"
          },
          "navigation": {
            "prev": "rf.choice",
            "next": "rf.dipswitch"
          }
        },
        {
          "id": "rf.dipswitch",
          "options": {
            "dipswitchList": [
              1,
              2,
              3,
              4,
              5,
              "A",
              "B",
              "C",
              "D",
              "E"
            ],
            "body": "rf.pair.dipswitch.body.extended"
          },
          "navigation": {
            "prev": "rf.info"
          }
        },
        {
          "id": "rf.test_switch.2",
          "options": {
            "body": "rf.pair.test.body.switch_generated"
          },
          "navigation": {
            "prev": "rf.dipswitch",
            "next": "choose_slave.2"
          }
        },
        {
          "template": "choose_slave",
          "id": "choose_slave.2",
          "navigation": {
            "prev": "rf.test_switch.2",
            "next": "rf.done"
          }
        },
        {
          "id": "rf.done"
        }
      ],
      "id": "AB440SC",
      "name": {
        "en": "AB440SC"
      },
      "rf": {
        "signal": "elro_dipswitch"
      }
    },
    {
      "capabilities": [
        "onoff"
      ],
      "images": {
        "large": "/drivers/AB440WD/assets/images/large.png",
        "small": "/drivers/AB440WD/assets/images/small.png"
      },
      "icon": "/drivers/AB440WD/assets/icon.svg",
      "class": "socket",
      "pair": [
        {
          "id": "rf.choice",
          "options": {
            "title": "rf.pair.choice.title.dipswitch",
            "body": "rf.pair.choice.body.dipswitch",
            "choices": [
              {
                "name": "rf.pair.choice.buttons.copy.default",
                "view": "rf.imitate",
                "svg": "assets/remote.svg"
              },
              {
                "name": "rf.pair.choice.buttons.generate.dipswitch",
                "view": "rf.info",
                "svg": "assets/dipswitches.svg"
              }
            ]
          }
        },
        {
          "id": "rf.imitate",
          "navigation": {
            "prev": "rf.choice"
          },
          "options": {
            "svg": "assets/remote.svg"
          }
        },
        {
          "id": "rf.test_switch",
          "navigation": {
            "prev": "rf.imitate",
            "next": "choose_slave"
          }
        },
        {
          "template": "choose_slave",
          "id": "choose_slave",
          "navigation": {
            "prev": "rf.test_switch",
            "next": "rf.done"
          }
        },
        {
          "id": "rf.info",
          "options": {
            "title": "rf.pair.info.title.dipswitch",
            "body": "rf.pair.info.body.dipswitch",
            "svg": "assets/dipswitches.svg"
          },
          "navigation": {
            "prev": "rf.choice",
            "next": "rf.dipswitch"
          }
        },
        {
          "id": "rf.dipswitch",
          "options": {
            "dipswitchList": [
              1,
              2,
              3,
              4,
              5,
              "A",
              "B",
              "C",
              "D",
              "E"
            ],
            "body": "rf.pair.dipswitch.body.extended"
          },
          "navigation": {
            "prev": "rf.info"
          }
        },
        {
          "id": "rf.test_switch.2",
          "options": {
            "body": "rf.pair.test.body.switch_generated"
          },
          "navigation": {
            "prev": "rf.dipswitch",
            "next": "choose_slave.2"
          }
        },
        {
          "template": "choose_slave",
          "id": "choose_slave.2",
          "navigation": {
            "prev": "rf.test_switch.2",
            "next": "rf.done"
          }
        },
        {
          "id": "rf.done"
        }
      ],
      "id": "AB440WD",
      "name": {
        "en": "AB440WD"
      },
      "rf": {
        "signal": "elro_dipswitch"
      }
    }
  ],
  "signals": {
    "433": {
      "elro_dipswitch": {
        "sof": [],
        "eof": [
          300
        ],
        "words": [
          [
            300,
            980,
            950,
            350
          ],
          [
            300,
            980,
            300,
            980
          ]
        ],
        "interval": 9940,
        "repetitions": 10,
        "sensitivity": 0.4,
        "minimalLength": 12,
        "maximalLength": 12
      }
    }
  }
}